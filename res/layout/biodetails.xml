<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/bioimage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/facebook_head" />

    <TextView
        android:id="@+id/bioname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bioimage"
        android:background="#3366CC"
        android:text="Name" />

    <TextView
        android:id="@+id/biomajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bioname"
        android:layout_toRightOf="@+id/bioimage"
        android:background="#3366CC"
        android:text="Major" />

    <TextView
        android:id="@+id/biopos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/biomajor"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/biomajor"
        android:background="#3366CC"
        android:text="Position" />

    <ListView
        android:id="@+id/biosarticles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bioimage" >

    </ListView>

</RelativeLayout>
